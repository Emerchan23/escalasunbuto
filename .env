# Configurações de Produção - Sistema de Escala de Sobreaviso Monolítico

# Ambiente
NODE_ENV=production

# Porta do servidor
PORT=4000

# URLs da API
NEXT_PUBLIC_API_URL=http://localhost:4000/api
INTERNAL_API_URL=http://localhost:4000/api

# Caminho do banco de dados (externo ao container)
DB_PATH=/app/data/schedule.db

# Configurações do Next.js
NEXT_TELEMETRY_DISABLED=1

# Configurações de segurança
CORS_ORIGIN=*

# Configurações de log
LOG_LEVEL=info

# Configurações de timeout
KEEP_ALIVE_TIMEOUT=5000

# Versão do sistema
SYSTEM_VERSION=2.0.0-escalas

# Configurações de rede
HOST_IP=localhost
NETWORK_ACCESS_URL=http://localhost:4000
